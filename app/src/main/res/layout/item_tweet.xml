<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/tweet_background"
    android:padding="16dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tweetTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        android:maxLines="3"
    android:ellipsize="end"/>



    <TextView
        android:id="@+id/timestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/tweetTextView"/>

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Like"
        android:background="@drawable/button_background_red"
        android:textColor="@android:color/white"
        android:layout_below="@id/timestampTextView"/>

    <TextView
        android:id="@+id/likesCountTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 Likes"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/likeButton"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:visibility="gone"
        android:textColor="@color/white"
    android:background="@drawable/button_background_red"
    android:layout_alignParentEnd="true"
    android:layout_below="@id/likesCountTextView"
    android:layout_marginTop="8dp"/>

</RelativeLayout>
